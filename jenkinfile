
pipeline {
    agent any

    stages {
        stage('Debug') {
            steps {
                echo "Current workspace: ${WORKSPACE}"
                sh "ls -al ${WORKSPACE}"
            }
        }

        stage('Build') {
            steps {
                withMaven(maven: 'maven') {
                    sh 'mvn clean compile'
                }
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed"
        }
    }
}
