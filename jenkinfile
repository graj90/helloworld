pipeline {
    agent any

    tools {
        // Define the Maven tool by name
        maven 'maven'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Compile Stage') {
            steps {
                withMaven(maven: 'maven') {
                    sh 'mvn clean compile'
                }
            }
        }

        // Add other stages as needed
    }
}
